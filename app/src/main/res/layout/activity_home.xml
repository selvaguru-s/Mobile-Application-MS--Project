<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/letter_light"
    >


    <Button
        android:id="@+id/viewHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/letter_dark"
        android:text="Hike"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/viewObservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewHike"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/letter_dark"
        android:text="Observations"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/jsonbt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewObservation"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/letter_dark"
        android:text="Sync"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/jsonbt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewObservation"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/letter_dark"
        android:text="Visit our Website"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp" />

</RelativeLayout>